<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient android:startColor="#e4e4e4"
      			  android:endColor="#f7f6f6"
      			  android:angle="270"/>
            <stroke
                android:width="0.6dp"
                android:color="#d5d5d5" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#e4e4e4"
                android:angle="270" />
            <stroke
                android:width="0.6dp"
                android:color="#d5d5d5" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>