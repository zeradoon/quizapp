<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_sub"
    android:id="@+id/generalevent_quiz_resultlist">
    
    <include layout="@layout/generalevent_quiz_title" 
        android:id="@+id/title"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" />
    
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:gravity="top"
    	android:layout_weight="0"
    	android:paddingTop="5dp"
   		android:paddingLeft="10dp"
   		android:paddingRight="10dp">
   	   		
   		<RelativeLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal">
		    	
   			<TextView
    			android:id="@+id/TextView01"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_centerVertical="true"
				android:textColor="#000000"
				android:textSize="12dp"
				android:drawableLeft="@drawable/icon_clock"
				android:drawablePadding="3dp"
				android:text="퀴즈 종료" />
		</RelativeLayout>
   		
   		<LinearLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical"
    		android:padding="10dp"
    		android:gravity="center_horizontal">
   		
   			<TextView
	   			android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:textColor="#000000"
				android:textSize="13dp"
				android:text="수고하셨습니다."
				android:textStyle="bold"
				android:paddingBottom="5dp" />
				
			<TextView
			    android:id="@+id/generalevent_result_score"
	   			android:layout_width="fill_parent"
	   			android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:background="#ffecbd"
				android:textColor="#000000"
				android:gravity="center_horizontal"
				android:layout_centerVertical="true"
				android:textSize="15dp"
				android:text=""
				android:textStyle="bold" />

	    		<RelativeLayout
			   
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
	    		android:layout_gravity="center_horizontal"
	    		android:gravity="center_horizontal"
	    		android:paddingLeft="15dp"
	    		android:paddingRight="15dp"
	    		android:layout_marginBottom="3dp"
	    		android:orientation="horizontal">

                <ListView
                android:id="@+id/generalevent_resultlistview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:cacheColorHint="#00000000">
           		</ListView>
            
            </RelativeLayout>
		    
			<RelativeLayout
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:orientation="horizontal"
	    		android:layout_marginTop="15dp">
				<ImageButton android:src="@drawable/btn_quit_selector"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
					android:background="@color/Transparent" android:onClick="onclick"
					android:id="@+id/generalevent_quit"></ImageButton>
				<ImageButton android:src="@drawable/btn_viewranking_selector"
					android:background="@color/Transparent" android:layout_height="wrap_content"
					android:layout_width="wrap_content" android:id="@+id/generalevent_view_ranking"
					android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
					android:onClick="onclick"></ImageButton>
			</RelativeLayout>
	   	</LinearLayout>
	
	</LinearLayout>
</LinearLayout>