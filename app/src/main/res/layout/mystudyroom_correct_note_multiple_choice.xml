<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
   	android:layout_width="fill_parent"
   	android:layout_height="fill_parent"
   	android:orientation="vertical"
   	android:gravity="center_horizontal"
   	android:layout_weight="0">
   	<LinearLayout
   		android:id="@+id/correct_note_multi"   		
   		android:layout_width="fill_parent"
   		android:layout_height="fill_parent"
   		android:orientation="vertical"
   		android:gravity="top"
   		android:padding="10dp" 
   		android:weightSum="1"
   		android:visibility="gone">
   		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/correct_note_cnt2"
			android:layout_gravity="left" 
			android:textColor="#454545"/>
		<LinearLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:background="@drawable/question_border"
    		android:orientation="vertical"
    		android:layout_marginTop="5dp"
    		android:padding="10dp">
   			<TextView
	   			android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
				android:background="@drawable/bg_question"
				android:layout_gravity="left"/>
	   		<TextView	   			
	   			android:paddingTop="5dp"
	   			android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:textColor="#000000"				
				android:textSize="14dp"
				android:id="@+id/myhome_correct_multi_content"
				android:text="회사는 SUPEX Company를 지향하되 일정 기간 내에 도달 가능한 (   ) Company를 설정하고, 이를 각 단위조직에서 목표 및 전략으로 구체화하여 실행하도록 하여야 한다."/>
	   	</LinearLayout>
	   	<LinearLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
			android:background="@drawable/question_border"
    		android:orientation="vertical"
    		android:layout_marginTop="10dp"
	    	android:padding="10dp">
	    	<TextView
	   			android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
				android:background="@drawable/bg_answerword"
				android:layout_gravity="left" />
			<LinearLayout
	    		android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:orientation="horizontal"
	    		android:paddingTop="10dp"
	    		android:gravity="left">
	    		<RadioGroup
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<RadioButton
						android:id="@+id/myhome_correct_radio_1"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:text="기업관"							
						android:textSize="14dp"
						android:checked="false"
						android:enabled="false" />
					<RadioButton
						android:id="@+id/myhome_correct_radio_2"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:text="추구가치"
						android:textSize="14dp"
						android:checked="false"
						android:enabled="false" />
					<RadioButton
						android:id="@+id/myhome_correct_radio_3"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:text="경영원칙"
						android:textSize="14dp"
						android:checked="false"
						android:enabled="false" />
					<RadioButton
						android:id="@+id/myhome_correct_radio_4"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:text="기업문화"
						android:textSize="14dp"
						android:checked="false"
						android:enabled="false" />
				</RadioGroup>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
			android:background="@drawable/question_border"
    		android:orientation="vertical"
    		android:layout_marginTop="10dp"
    		android:layout_marginBottom="10dp"
	    	android:padding="10dp">
	    	<TextView
	   			android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
				android:background="@drawable/bg_answer"
				android:layout_gravity="left" />
			<TextView
				android:paddingTop="5dp"
	   			android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:textColor="#525252"
	   			android:textSize="13dp"
	   			android:id="@+id/myhome_correct_multi_explain"
	   			android:text="회사는 일정 기간 내에 도달 가능한 Better Company를 설정하고, 이를 각 단위조직에서 목표 및 전략으로 구체화하여 실행하도록 하여야 한다."
				android:layout_gravity="left" />
		</LinearLayout>
		<RelativeLayout
			android:layout_width="fill_parent"
			android:orientation="horizontal" 
			android:layout_height="wrap_content" 
			xmlns:android="http://schemas.android.com/apk/res/android">
			<Button 
				android:id="@+id/btn_correct_note_before_multi"
				android:layout_height="wrap_content" 
				android:background="@drawable/btn_correct_note_before" 
				android:onClick="monclick"
				android:gravity="center_vertical" 
				android:layout_width="wrap_content" 
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"/>
			<Button 
				android:id="@+id/btn_correct_note_next_multi"
				android:layout_height="wrap_content" 
				android:background="@drawable/btn_correct_note_next" 
				android:onClick="monclick"
				android:gravity="center_vertical" 
				android:layout_width="wrap_content" 
				android:layout_alignParentTop="true" 
				android:layout_alignParentRight="true"/>
			<Button 
				android:id="@+id/btn_correct_note_delete_multi"
				android:layout_height="wrap_content" 
				android:background="@drawable/btn_correct_note_delete" 
				android:onClick="monclick"
				android:gravity="center_vertical" 
				android:layout_width="wrap_content" 
				android:layout_centerVertical="true" 
				android:layout_centerHorizontal="true"/>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>