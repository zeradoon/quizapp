<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="@drawable/answerlist_bg"       
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="7dp"
            android:gravity="center_vertical|left"
            android:orientation="vertical" >
            
        	<LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|right" >
            	<TextView
            	    android:id="@+id/ranking_event_listview_entry_event_state"
                	style="@style/event_listview_entry_status_style"
                	android:layout_width="fill_parent"
                	android:layout_height="wrap_content"
                	android:gravity="right"
                	android:text="진행중" />
        	</LinearLayout>

            <TextView
                android:id="@+id/ranking_event_listview_entry_event_title"
                style="@style/event_listview_entry_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="회식비지원팀대항전" />

            <TextView
                android:id="@+id/ranking_event_listview_entry_event_duration"
                style="@style/event_listview_entry_time_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이벤트기간 : 2012-05-01 ~ 2012-05-31" />
            
        </LinearLayout>
	</LinearLayout>
</LinearLayout>