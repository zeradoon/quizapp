<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:background="@drawable/bg_sub">
	<include 
		layout="@layout/mystudyroom_title" 
		android:id="@+id/title"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" />

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginTop="15dp"
	    android:layout_weight="0"
	    android:gravity="center_horizontal"
	    android:orientation="vertical"
	    android:weightSum="1" >

		<LinearLayout
		    android:id="@+id/LinearLayout01"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
		    android:layout_weight="0.24"
		    android:background="@drawable/papernote"
		    android:gravity="top"
		    android:orientation="vertical"
		    android:padding="10dp"
		    android:weightSum="1" >

			<TextView 
				android:id="@+id/TextView01"
				android:layout_gravity="center_horizontal" 
				android:textColor="#000000"
				android:paddingTop="20dp" 
				android:text="@+string/mystudyroom_select_note"
				android:textSize="15dp"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" />
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:orientation="horizontal"
				android:gravity="center_horizontal" 
				android:paddingTop="20dp"
				android:layout_weight="0.43">
				<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_horizontal"
					android:background="@drawable/btn_select_mystudyroom01"
					android:textColor="#FF0000"
					android:paddingTop="10dp"
					android:id="@+id/mystudyroom_selectbtn01"
					android:onClick="monclick"
					android:layout_marginRight="10dp"/>

				<Button
				    android:id="@+id/mystudyroom_selectbtn02"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_horizontal"
				    android:layout_marginLeft="10dp"
				    android:background="@drawable/btn_select_mystudyroom02"
				    android:onClick="monclick"
				    android:paddingTop="10dp"
				    android:textColor="#FF0000" />

			</LinearLayout>

			<TextView
			    android:id="@+id/TextView01"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center_horizontal"
			    android:layout_marginLeft="5dp"
			    android:layout_marginRight="5dp"
			    android:paddingTop="10dp"
			    android:text="@+string/mystudyroom_select_note_info"
			    android:textColor="#646464"
			    android:textSize="13dp" />

		</LinearLayout>
	</LinearLayout>
</LinearLayout>